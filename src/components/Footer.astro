---
import Social from '../components/Social.astro'
import ThemeIcon from './ThemeIcon.astro'
const url = 'oscartorres.io'
const twitterUsername = '0scartorres10'
// const linkedInUsername = 'oscartorres10'
const gitHubUsername = 'oscartorres-10'
---

<footer>
  <ThemeIcon />
  <Social platform='twitter' username={twitterUsername} />
  <!-- it doesn't work because LinkedIn adds a "in" before the username -->
  <!-- <Social platform='linkedin' username={linkedInUsername} /> -->
  <Social platform='github' username={gitHubUsername} />
</footer>

<style>
  footer {
    display: flex;
    justify-content: end;
    gap: 1rem;
    background-color: lightgray;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
  }
</style>
